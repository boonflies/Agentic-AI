from google import genai
import os

# 1. Setup - Replace with your key or use an environment variable
GEMINI_API_KEY = "AIzaSyBFtTaqh_N7fxea1aL9GY22CTQMhA_tlHg"
client = genai.Client(api_key=GEMINI_API_KEY)

def run_gemini_agent():
    print("--- Gemini AI Agent (Free Tier) ---")
    print("Type 'quit' or 'exit' to stop.\n")

    # 2. Start a chat session (this handles 'memory' for you)
    chat = client.chats.create(model="gemini-2.5-flash-lite")

    while True:
        user_input = input("You: ")
        
        if user_input.lower() in ["quit", "exit"]:
            print("Agent: Goodbye! ðŸ‘‹")
            break

        try:
            # 3. Send message and get response
            response = chat.send_message(user_input)
            print(f"Agent: {response.text}\n")
            
        except Exception as e:
            print(f"Error: {e}")

if __name__ == "__main__":
    run_gemini_agent()
